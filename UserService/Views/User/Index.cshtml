@model IEnumerable<UserService.Models.User>

<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Last Name</th>
            <th>Email</th>
            <!-- Other properties -->
            <th></th> <!-- Header for delete button column -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                <!-- Other properties -->

                <!-- Delete button -->
                <td>
                    <button data-id="@user.Id" class="btn btn-danger deleteBtn">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function() {
        $('.deleteBtn').click(function() {
            var userId = $(this).data('id');
            $.ajax({
                url: '/User/Delete/' + userId,
                type: 'DELETE',
                success: function(result) {
                    // Handle success - perhaps remove the row from the DOM
                    console.log("User deleted successfully");
                    // reload the page
                    location.reload();
                },
                error: function(request,msg,error) {
                    // Handle error
                    console.log(error);
                }
            });
        });
    });
</script>
